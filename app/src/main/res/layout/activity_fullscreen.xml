<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FullscreenActivity">

    <ImageView
        android:id="@+id/fullscreenPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/fullscreen_photo_from_flickr"
        android:scaleType="centerCrop"
        android:transitionName="PhotoTransition"
        tools:src="@drawable/placeholder_error" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back_white_36dp"
        app:civ_border_color="@color/md_white_1000"
        app:civ_border_width="3dp"
        app:civ_fill_color="#A0000000" />

</RelativeLayout>